<div id="map-container">
    <!-- Ліва частина - карта -->
    <div id="map-area">
      <div id="map-header">
        <h1>Інтерактивна карта університету</h1>
        <div id="map-info">
          <span id="building-name">Завантаження...</span>
          <span id="floor-info">Поверх: <span id="current-floor">-</span></span>
        </div>
      </div>
  
      <div id="map-controls">
        <button id="zoom-in" title="Збільшити">+</button>
        <button id="zoom-out" title="Зменшити">-</button>
        <button id="reset-view" title="Скинути вигляд">⌂</button>
        <button id="toggle-labels" title="Показати/сховати підписи">A</button>
      </div>
  
      <div id="svg-container">
        <div id="loading-indicator">
          <div>Завантаження карти...</div>
        </div>
        <div id="map-svg"></div>
      </div>
  
      <div id="route-info" style="display: none;">
        <h3>Маршрут</h3>
        <div id="route-details">
          <div id="route-distance">Відстань: <span>0</span> м</div>
          <div id="route-steps"></div>
        </div>
        <button id="clear-route">Очистити маршрут</button>
      </div>
    </div>
  
    <!-- Права частина - інструменти -->
    <div id="tools-panel">
      <!-- Вибір карти -->
      <div id="map-selector">
        <h2>Вибір карти</h2>
        <select id="map-list">
          <% if (availableMaps && availableMaps.length > 0) { %>
            <% availableMaps.forEach(map => { %>
              <option value="<%= map.id %>" <%= map.id === defaultMapId ? 'selected' : '' %>>
                <%= map.name %>
              </option>
            <% }) %>
          <% } else { %>
            <option disabled>Карти не знайдено</option>
          <% } %>
        </select>
        <button id="load-map">Завантажити карту</button>
      </div>
  
      <!-- Вибір поверху -->
      <div id="floor-selector">
        <h2>Поверхи</h2>
        <div id="floor-buttons">
          <!-- Поверхи будуть додані динамічно -->
        </div>
      </div>
  
      <!-- Пошук кімнат -->
      <div id="room-search">
        <h2>Пошук кімнат</h2>
        
        <div id="search-input-container">
          <input 
            type="text" 
            id="search-input" 
            placeholder="Введіть назву кімнати або номер"
            autocomplete="off"
          />
          <button id="search-button">Знайти</button>
        </div>
  
        <div id="category-filter">
          <label for="category-select">Категорія:</label>
          <select id="category-select">
            <option value="all">Всі категорії</option>
            <option value="laboratory">Лабораторії</option>
            <option value="restroom">Туалети</option>
            <option value="food-service">Їдальня</option>
            <option value="utility">Підсобні приміщення</option>
            <option value="recreation">Відпочинок</option>
            <option value="workspace">Робочі зони</option>
          </select>
        </div>
  
        <div id="search-results">
          <!-- Результати пошуку -->
        </div>
      </div>
  
      <!-- Навігація між кімнатами -->
      <div id="navigation">
        <h2>Навігація</h2>
        
        <div id="route-builder">
          <div id="from-room">
            <label for="from-select">Звідки:</label>
            <select id="from-select">
              <option value="">Виберіть початкову кімнату</option>
            </select>
          </div>
  
          <div id="to-room">
            <label for="to-select">Куди:</label>
            <select id="to-select">
              <option value="">Виберіть кінцеву кімнату</option>
            </select>
          </div>
  
          <button id="build-route">Побудувати маршрут</button>
          <button id="swap-route" title="Поміняти місцями">⇅</button>
        </div>
  
        <div id="quick-actions">
          <h3>Швидкі дії</h3>
          <button id="find-nearest-restroom">Найближчий туалет</button>
          <button id="find-nearest-food">Найближча їдальня</button>
          <button id="find-exit">Знайти вихід</button>
        </div>
      </div>
  
      <!-- Вибрана кімната -->
      <div id="room-details" style="display: none;">
        <h2>Деталі кімнати</h2>
        <div id="selected-room-info">
          <div id="room-name"></div>
          <div id="room-category"></div>
          <div id="room-keywords"></div>
          <div id="room-access"></div>
        </div>
        <div id="room-actions">
          <button id="route-to-room">Маршрут до цієї кімнати</button>
          <button id="route-from-room">Маршрут з цієї кімнати</button>
          <button id="highlight-room">Підсвітити кімнату</button>
        </div>
      </div>
  
      <!-- Легенда -->
      <div id="legend">
        <h2>Легенда</h2>
        <div id="legend-items">
          <div id="room-legend">
            <div>
              <span style="background-color: aqua; width: 15px; height: 15px; display: inline-block;"></span>
              Кімнати
            </div>
            <div>
              <span style="background-color: yellow; width: 15px; height: 15px; display: inline-block;"></span>
              Коридори
            </div>
            <div>
              <span style="background-color: blue; width: 15px; height: 15px; display: inline-block;"></span>
              Навігаційні точки
            </div>
            <div>
              <span style="background-color: red; width: 15px; height: 15px; display: inline-block;"></span>
              Стіни
            </div>
          </div>
        </div>
      </div>
  
      <!-- Інформація про систему -->
      <div id="system-info">
        <h2>Інформація</h2>
        <div id="system-status">
          <div>Статус: <span id="connection-status">Підключено</span></div>
          <div>Карта: <span id="current-map-name">-</span></div>
          <div>Кімнат: <span id="rooms-count">0</span></div>
          <div>Вузлів: <span id="nodes-count">0</span></div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Модальне вікно для помилок -->
  <div id="error-modal" style="display: none;">
    <div id="error-content">
      <h3>Помилка</h3>
      <p id="error-message"></p>
      <button id="close-error">Закрити</button>
    </div>
  </div>
  
  <!-- Контекстне меню для кімнат -->
  <div id="context-menu" style="display: none;">
    <div id="context-menu-items">
      <div id="context-room-name"></div>
      <button id="context-route-to">Маршрут сюди</button>
      <button id="context-route-from">Маршрут звідси</button>
      <button id="context-room-info">Детальна інформація</button>
    </div>
  </div>
  
  <script>
  // Глобальні змінні для роботи з картою
  window.mapConfig = {
    defaultMapId: '<%= defaultMapId %>',
    availableMaps: <%- JSON.stringify(availableMaps) %>,
    currentMapData: null,
    selectedRoom: null,
    currentRoute: null,
    zoomLevel: 1,
    panX: 0,
    panY: 0
  };
  </script>
  
  <script src="/js/map-core.js"></script>
  <script src="/js/map-ui.js"></script>
  <script src="/js/map-navigation.js"></script>
  <script src="/js/map-search.js"></script>